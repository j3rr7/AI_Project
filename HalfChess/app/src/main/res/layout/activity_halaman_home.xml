<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanHome"
    android:background="@mipmap/background_chess">

    <Button
        android:id="@+id/btn1P"
        android:layout_width="235dp"
        android:layout_height="55dp"
        android:layout_marginTop="388dp"
        android:background="@color/home"
        android:fontFamily="@font/goblin_one"
        android:onClick="clickP1"
        android:rotationY="17"
        android:text="Vs Com"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/goblin_one"
        android:rotationY="-17"
        android:text="Half Chess"
        android:textColor="#ffff"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn2P"
        android:layout_width="235dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@color/home"
        android:fontFamily="@font/goblin_one"
        android:onClick="clickP2"
        android:rotationY="17"
        android:text="vs player"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btn1P"
        app:layout_constraintStart_toStartOf="@+id/btn1P"
        app:layout_constraintTop_toBottomOf="@+id/btn1P" />
</androidx.constraintlayout.widget.ConstraintLayout>